# EditorConfig helps maintain consistent coding styles
# between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

# Ensure consistency across both projects
[Documents/disco-agent-saas/**/*.{js,jsx,ts,tsx,json}]
indent_size = 2
